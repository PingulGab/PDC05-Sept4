<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Module03Activity01.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Module03Activity01.View"
    Shell.FlyoutBehavior="Disabled"
    Title="Module03Activity01">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:Dashboard}"
        Route="MainPage" />

    <ShellContent
        Title="Start"
        ContentTemplate="{DataTemplate views:StartPage}"
        Route="MainPage" />

    <ShellContent
        Title="Offline"
        ContentTemplate="{DataTemplate views:OfflinePage}"
        Route="MainPage" />

</Shell>
